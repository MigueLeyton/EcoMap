<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginMenuEcoMap">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/plandeestudios01_esp_pres_01_768x1018"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarLoginMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="@color/material_dynamic_primary30"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="63dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="209dp"
            android:layout_height="205dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pngegg" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <Button
            android:id="@+id/btnIrTiposMenu"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="MenÃº principal" />

        <Button
            android:id="@+id/btnVerDatosUsuario"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="Ver datos" />

        <Button
            android:id="@+id/btnVerInformacion"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="EcoMap" />

        <Button
            android:id="@+id/btnSalirUsuarioMenu"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="Salir" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
