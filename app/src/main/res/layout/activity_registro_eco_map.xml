<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registroEcoMap">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondoecomap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_dynamic_primary30"
            android:minHeight="?attr/actionBarSize"
            android:alpha="0.9"
            android:theme="?attr/actionBarTheme" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="355dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Nombre" />

        <EditText
            android:id="@+id/idNombreRegistro"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Ingrese su nombre"
            android:padding="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="355dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Apellido" />

        <EditText
            android:id="@+id/idApellidoRegistro"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Ingrese su apellido"
            android:padding="16dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="355dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Repetir contraseña" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Repetir su contraseña"
            android:inputType="textPassword"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="355dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Correo" />

        <EditText
            android:id="@+id/idCorreoRegistro"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Ingrese su correo electrónico"
            android:padding="16dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <Button
            android:id="@+id/idRegistrarRegistro"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="Registrar" />

        <Button
            android:id="@+id/idCancelar"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_on_surface_disabled"
            android:text="Cancelar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
